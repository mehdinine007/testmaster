@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.Localization
@using OrderManagement.Localization
@model OrderManagement.Pages.OrderManagement.Orders.CreateModel
@inject IHtmlLocalizer<OrderManagementResource> L
@{
    Layout = null;
}


<abp-dynamic-form submit-button="false" abp-model="Order" asp-page="/OrderManagement/Orders/Create">
    <abp-modal size="@(AbpModalSize.Large)">
        <abp-modal-header title="@L["Create"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
